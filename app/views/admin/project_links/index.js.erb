<% if @project_links.any? %>

	// Fill the right box with first project_link details in the list
	$('#div_project_link_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

	// Rendering the item list
	$('#div_project_link_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
	$('#div_project_link_drop_down').html("<%= escape_javascript(render(:partial=>"drop_down")) %>");

<% else %>

	var noResultsText = "<div id=\"div_admin_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results") %></div>";
	$('#div_project_link_index').html(noResultsText);
	$('#div_project_link_details').html(noResultsText);

<% end %>