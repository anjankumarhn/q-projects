<% if @link_types.any? %>
	// Fill the right box with first link_type details in the list
	$('#div_link_type_details').html("<%= escape_javascript(render(:partial=>'show')) %>");
  initPopovers();

	// Rendering the item list
	$('#div_link_type_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
	$('#div_link_type_drop_down').html("<%= escape_javascript(theme_drop_down(@link_types, :name)) %>");
<% else %>
	var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
	$('#div_link_type_index').html(noResultsText);
	$('#div_link_type_details').html(noResultsText);
<% end %>